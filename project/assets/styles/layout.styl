body
  background bg
  color fifth

.container
  width 90%
  margin auto

// Header Section

.logo
  position fixed
  z-index 4
  width 100%
  background-color rgba(70, 98, 159, 1)
  -webkit-clip-path polygon(0 100%,100% 70%,100% 0, 0 0)
  height 800px
  margin-top -640px
  h1
    padding 0
    margin 0

header
  position relative
  z-index 5
  background url('../images/bg-temp.jpg')
  background-size cover
  -webkit-clip-path polygon(0 100%,100% 70%,100% 0, 0 0)
  height 800px
  margin-top -20px
  h2
    position relative
    top 270px
    color white
    span
      font-style italic
  + h3
    float right
    text-align right
    width 50%
    z-index 10
    margin-top -30px

// Testimonials

.testimonials
  background-color rgba(70, 98, 159, 0.8)
  -webkit-clip-path polygon(0 100%,100% 70%,100% 0, 0 30%)
  height auto
  padding 100px 0
  section
    position relative
    top 40%
    h2, p, h6
      width 400px
      margin auto
      text-align center
      color rgba(white, 0.8)
    .avatar
      height 60px
      width 60px
      border-radius 100%
      display: block;
      margin auto
      // margin-left: auto;
      // margin-right: auto;
    cite a
      text-align center
      display block
      color white
      text-decoration none
      padding 1rem
nav
  ul
    padding 0
    margin 0
    display block
    padding-top 1rem
    float right
    li
      display inline
      padding 1rem
  a
    text-decoration none
    color white
