body
  background white
  color fifth

.container
  width 90%
  margin auto

// Header Section

.logo
  position fixed
  z-index 4
  width 100%
  background-color rgba(70, 98, 159, 0.95)
  -webkit-clip-path polygon(0 100%,100% 20%,100% 0, 0 0)
  height 320px
  margin-top -170px
  h1
    padding 0
    margin 0

header
  position relative
  z-index 5
  background url('../images/bg-temp.jpg')
  background-size cover
  -webkit-clip-path polygon(0 100%,100% 70%,100% 0, 0 0)
  height 800px
  margin-top -60px
  h2
    position relative
    top 270px
    color white
    span
      font-style italic
  + h3
    float right
    text-align right
    width 50%
    z-index 10
    margin-top -30px

// Testimonials

.testimonials
  background-color rgba(70, 98, 159, 0.8)
  -webkit-clip-path polygon(0 100%,100% 60%,100% 0, 0 40%)
  height auto
  padding 200px 0
  section
    position relative
    top 40%
    h2, p, h6
      width 400px
      margin auto
      text-align center
      color rgba(white, 0.8)
    .avatar
      height 60px
      width 60px
      border-radius 100%
      display: block;
      margin auto
      // margin-left: auto;
      // margin-right: auto;
    cite a
      text-align center
      display block
      color white
      text-decoration none
      padding 1rem

// serviceicons

.serviceicons
  display block
  width 100%
  height 600px
  // background-color #E1E1E1
  // overflow hidden
  z-index 1
  ul
    padding 0
    margin 0
    position relative
    width 100%
    height 100%
    // overflow hidden
    // transform-origin: 50% 100%;
	  // transform: perspective(800px) rotateX(30deg);
  li
    list-style none
    display inline
    animation-name rotate
    animation-iteration-count infinite
    animation-timing-function linear
    animation-duration: 12s;
    height 400px
    width 400px
    img
      // animation-name rotatereverse
      // transform-origin: 50% 100%;
  	  // transform: perspective(80px) rotateX(30deg);

  .logo2
    // lost-align center
    position absolute
    margin auto
    top 50%
    right 50%
    bottom 50%
    left 50%
    // width 100px
    // height 100px
    // background-color red

  .rotating
    position absolute
    margin auto
    // top 30%
    // right -40%
    top 30%
    right 30%
    bottom 50%
    left 50%
  .appstore
    width 50%
    height 30%
    left 5%
    animation-duration: 52s;
  .html5
    width 45%
    left 20%
    top 20%
    animation-duration: 32s;
nav
  ul
    padding 0
    margin 0
    display block
    padding-top 2rem
    padding-right 2rem
    float right
    li
      display inline
      padding 1rem
      font-size 20px
  a
    text-decoration none
    color white

// specialities
.specialities
  ul
    max-width 800px
    margin auto
    padding 0
  li
    list-style none
    lost-column 1/2
    padding 30px 0
    p
      // lost-column 3/4
      // lost-offset 1/8
      // lost-align center
      // float none!important
      width 60%
      display block
      margin auto
  h3
    font-weight 100
    lost-column 1/1
    font-size 2rem
    text-align center
    color primary
    lost-utility clearfix
  svg
    width 160px
    height 160px
    display block
    margin auto

// whatcanwedo

.whatcanwedo
  img.featured
    -webkit-clip-path polygon(0 100%,100% 79%,100% 0, 0 21%)
    position relative
    display block
  .left
    height 600px
    lost-column 6/12
  .right
    lost-align right
    lost-column 3/12
    height 300px
  > p
    lost-column 4/12
    float right
    padding 2em 0
    lost-utility clearfix
  section
    clear left
    padding 2em 0
    display block
    margin auto
    width 1020px



// footer
footer
  background-color rgba(70, 98, 159, 0.8)
  -webkit-clip-path polygon(0 100%,100% 100%,100% 0, 0 60%)
  height 414px
