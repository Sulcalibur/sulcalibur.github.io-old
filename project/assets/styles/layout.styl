// specialities
.specialities
  ul
    max-width 800px
    margin auto
    padding 0
  li
    list-style none
    lost-column 1/2
    padding 30px 0
    p
      width 60%
      display block
      margin auto
      font-size 1.1em
  h3
    font-weight 100
    lost-column 1/1
    font-size 2rem
    text-align center
    color primary
    lost-utility clearfix
  svg
    width 160px
    height 160px
    display block
    margin auto

// whatcanwedo

.whatcanwedo
  img.featured
    -webkit-clip-path polygon(0 100%,100% 79%,100% 0, 0 21%)
    position relative
    display block
  .left
    height 600px
    lost-column 6/12
  .right
    lost-align right
    lost-column 3/12
    height 300px
  > p
    lost-column 4/12
    float right
    padding 2em 0
    lost-utility clearfix
  section
    clear left
    padding 2em 0
    display block
    margin auto
    max-width 1020px

// Contact Page

// form
form
  width 400px
  margin auto
  input, .message
    width 100%
    overfolw hidden
    margin 1rem 0
    padding 0.5em 1em
    border 2px solid fifth
    color fifth
  .message
    height 200px
// footer
footer
  background-color rgba(70, 98, 159, 0.8)
