.btncontainer
  // lost-utility clearfix
  // max-width 960px
  height 100px
  lost-align center
  display block
  clear both
  position relative
.readmore, .btn
  // lost-utility clearfix
  text-decoration none
  color lighten(primary, 20)
  border 2px solid fifth
  transition: 0.2s ease-in-out all;
  font-size 1.6rem
  // width 80%
  // clear left
  // margin auto
  // lost-align center
  text-align center
  // text-align center
  // margin-left 8%
  // margin-right 40%
  background-color white
  box-shadow -4px 4px 0px lighten(fifth, 10)
  padding 0.5em 2em
  outline 2px solid white
  outline-offset 0px
  +above(600px)
    font-size 1.2rem
    // width 20%
    // margin-left 42%
  &:hover
    color white
    background fifth
    outline 2px solid white
    outline-offset 0px
    border 2px solid darken(fifth, 10)
    box-shadow -4px 4px 0px darken(fifth, 10)
  &:active, &:focus
    color darken(fifth, 40)
    position relative
    top 4px
    left -4px
    box-shadow none
