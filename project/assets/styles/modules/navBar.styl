.navbar
  width 100%
  position relative
  top -40px
  +below(600px)
    top 0
    padding-top 8rem
    padding-bottom 2rem
    background-color darken(primary, 10)
  ul
    padding 0
    margin 0
    display block
    +above(600px)
      padding 2rem
      margin-top 50px
      text-align right
    li
      display block
      font-size responsive 14px 22px
      +below(600px)
        width 100%
        height 44px
        padding 0.75rem 0
        text-align center
        font-size 24px
      +above(600px)
        display inline
        padding 1rem
  a
    text-decoration none
    color primary
    padding-top 10px
    position relative
    text-decoration none
    &:before, &:after
      content ''
      position absolute
      transition transform .5s ease
    &:before
      left 0
      bottom 0
      width 100%
      height 2px
      background primary
      transform  scaleX(0)
    &:hover:before
      transform  scaleX(1)
.index .navbar, footer .navbar
    top 0
    a
      color white
      &:before
        background white
footer
  .navbar
    ul
      margin-top 40px
