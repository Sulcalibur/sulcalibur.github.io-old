// Testimonials

.testimonials
  background-color rgba(70, 98, 159, 0.8)
  -webkit-clip-path polygon(0 100%,100% 60%,100% 0, 0 40%)
  height auto
  padding 200px 0
  section
    position relative
    top 40%
    h2, p, h6
      width 400px
      margin auto
      text-align center
      color rgba(white, 0.8)
    .avatar
      height 60px
      width 60px
      border-radius 100%
      display: block;
      margin auto
      // margin-left: auto;
      // margin-right: auto;
    cite a
      text-align center
      display block
      color white
      text-decoration none
      padding 1rem
