// Testimonials

.testimonials
  background-color lighten(primary, 10)
  svgmask()
  section
    padding 200px 0
    p, h6
      lost-center 400px
      +above(600px)
        lost-center 600px
      text-align center
      color white
    p
      font-family 'Baskerville', times, times-roman, serif
      font-style italic
      font-size responsive 18px 28px
      margin-bottom 0
    .avatar
      height 60px
      width 60px
      border-radius 100%
      display: block;
      margin auto
    cite a
      text-align center
      display block
      color white
      text-decoration none
      padding 1rem
